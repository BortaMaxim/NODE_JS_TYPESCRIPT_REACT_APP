{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "typeRoots": [
      "src/config/envConfig.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    ".sequelizerc"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}